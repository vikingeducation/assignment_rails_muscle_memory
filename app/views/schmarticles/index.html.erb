<p id="notice"><%= notice %></p>

<h1>Schmarticles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schmarticles.each do |schmarticle| %>
      <tr>
        <td><%= schmarticle.title %></td>
        <td><%= schmarticle.body %></td>
        <td><%= link_to 'Show', schmarticle %></td>
        <td><%= link_to 'Edit', edit_schmarticle_path(schmarticle) %></td>
        <td><%= link_to 'Destroy', schmarticle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

