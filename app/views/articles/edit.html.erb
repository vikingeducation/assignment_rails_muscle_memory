<h1>Update Article #<%= @article.id %></h1>

<form action="<%= article_path(@article) %>" method="post">

  <input type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <input name="_method" type="hidden" value="patch" />

  <label for="title">Title</label>
  <input type="text" name="article[title]" id="title" value="<%= @article.title %>" placeholder="Enter a title!">

  <label for="body">Article Body</label>
  <input type="text" name="article[body]" id="body" value="<%= @article.body %>" placeholder="Article content">

  <input type="submit">
</form>