
<h1>Update Article <%=@article.id%></h1>

<form action="<%=article_path(@article)%>" method="post">
<input name="_method" type="hidden" value="patch" />

  <br>
  Title:  <input type="text" name="article[title]" value="<%=@article.title%>"><br><br>
  Body: <textarea name="article[body]" cols="40" rows="5" ... ><%=@article.body%></textarea><br>
    <input type="submit" value="Submit">
    <input  type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

</form>