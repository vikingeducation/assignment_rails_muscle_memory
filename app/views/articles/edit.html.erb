<h1>Update Article #<%= @article.id %></h1>
<%= form_for(@article) do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <p>
  <%= f.submit %>
<% end %>
</p>
<p><%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Really delete this article?"} %></p>
<input name="_method" type="hidden" value="patch" />
