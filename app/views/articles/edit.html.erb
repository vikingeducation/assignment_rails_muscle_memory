<h1>Update Article <%= @article.id %></h1>
<form action="<%= article_path(@article.id) %>" method="post">
  <input name="_method" type="hidden" value="patch" />
  <label>Title</label>
  <input type="text" name="article[title]", value="<%= @article.title %>">
  <label>Body</label>
  <input type="body" name="article[body]", value="<%= @article.body %>" >
  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">
  <input type="submit" value="Submit">
</form>
