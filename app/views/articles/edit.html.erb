<h1>Update Article <%=@article.id %>: <%= @article.title %> </h1>

<form action="<%=article_path(@article)%>" method='post'>
  <input type='text' placeholder='title' name='title' placeholder="<%= @article.title %>">
  <br>
  <p><%= @article.body %></p>
  <br>
  <textarea rows="20", cols="50" value="" placeholder='body' name='body'></textarea>
  <input type='submit' value='Submit'>
  <input name="_method" type="hidden" value="patch" />
  <input  type="hidden" 
    name="authenticity_token" 
    value="<%= form_authenticity_token %>">
</form>

