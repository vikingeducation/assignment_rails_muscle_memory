<h2>Update Article <%=@article.id %></h2>

<form action="<%=article_path(@article.id)%>" update method="post">
  <input  type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
    <input name="_method" type="hidden" value="patch" />

    <label for="title">Title</label><br>
    <input type="text" name="title" value="<%=@article.title%>"><br>
    <label for="body">Write your article here!</label><br>
    <textarea name="body"><%=@article.body%></textarea><br>
    <input type="submit" name="article" value="Update">
  </form>
