<h1>New Article</h1>

<form action="<%= articles_path %>" method="post">
  <input type="hidden" 
    name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Title:</label>
  <br />
  <input type="text" name="title">
  <p></p>
  <label>Main body:<br /></label>
  <textarea name="body"></textarea>
  <br />
  <p></p>
  
  <input type="submit">
</form> 


