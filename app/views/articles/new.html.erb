<h1>New Article</h1>

<form action="/articles" method="post">
  <input type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <label for="title">Title</label>
  <input type="text" name="article[title]" id="title" placeholder="Enter a title!">

  <label for="body">Article Body</label>
  <input type="text" name="article[body]" id="body" placeholder="Article content">

  <input type="submit">
</form>
