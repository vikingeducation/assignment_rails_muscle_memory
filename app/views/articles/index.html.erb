<h1>Articles</h1>

<table>
  <% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.id, article_path(article) %></td>
    <td><%= link_to article.title, article_path(article) %></td>
    <td><%= link_to "Edit This Article", edit_article_path(article) %></td>
    <td><%= link_to "Delete Article", article_path(article), method: "delete" %></td>
  </tr>
  <% end %>
</table>

<p>
<%= link_to "Create a New Article", new_article_path %>
</p>