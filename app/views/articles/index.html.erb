<h1>All Articles</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
  </tr>

    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= link_to "#{article.id}", article_path(article.id) %>
        </td>
        <td>
          <%= link_to "#{article.title}", article_path(article.id) %>
        </td>
        <td>
          <%= link_to "Edit this article", edit_article_path(article.id) %>
        </td>
        <td>
          <%= link_to "Delete", article_path(article.id), method: "delete" %>
        </td>
      </tr>
    <% end %>
</table>